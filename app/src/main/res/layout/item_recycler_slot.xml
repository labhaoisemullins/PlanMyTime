<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/icons_timetable" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Module Code"
                android:textColor="@color/lightGreen"
                android:textStyle="bold"
                android:layout_marginTop="40px"
                android:layout_marginLeft="45px"
                android:layout_marginBottom="15px"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/module"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="45px"
                android:text="Location"
                android:textColor="@color/darkGreen"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slotType"
                android:layout_below="@+id/location"
                android:layout_marginLeft="45px"
                android:layout_marginBottom="15px"
                android:text="Slot Type"
                android:textColor="@color/darkGreen" />

            <TextView
                android:id="@+id/slotTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slotType"
                android:layout_marginLeft="45px"
                android:layout_marginBottom="25px"
                android:text="Slot Time"
                android:textColor="@color/darkGreen" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>